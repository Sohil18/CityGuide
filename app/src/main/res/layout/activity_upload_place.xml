<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_Place">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_bar"
                android:background="#F44336"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imageIDg"
                    android:layout_width="match_parent"
                    android:layout_height="370dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >
                <EditText
                    android:visibility="gone"
                    android:id="@+id/imageNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/imageNamee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="State name" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/plcename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Place name" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/statename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="State name" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/distickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="District name" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Discription name" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/localtopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Local Topic" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Service" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Languages" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/availabilty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Availability " />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Price" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <EditText

                    android:id="@+id/guidee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageID"
                    android:hint="Guide" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <Spinner
                    android:id="@+id/spineerr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"

                app:cardPreventCornerOverlap="true"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/textt"/>

            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chooseBtn"
                android:text="Choose Image"
                android:layout_below="@+id/imageNameET"
                android:onClick="selectImage"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uploadBtn"
                android:text="Upload Image"
                android:layout_below="@+id/chooseBtn"
                android:onClick="uploadImage"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>