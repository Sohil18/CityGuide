<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bthre"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Make_Payment">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Fill Card Details"
        android:textColor="#F44336"
        android:fontFamily="@font/opensans"
        android:textSize="20sp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/mplace"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:text="starting date"
        android:textColor="#F44336"
        android:textSize="20sp" />
    <TextView
android:visibility="gone"
        android:id="@+id/mstartdate"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/opensans"
        android:gravity="center"
        android:text="starting date"
        android:textColor="#F44336"
        android:textSize="20sp" />
    <TextView
        android:visibility="gone"
android:id="@+id/menddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="end date"
        android:textColor="#F44336"
        android:fontFamily="@font/opensans"
        android:textSize="20sp"/>
    <TextView
        android:visibility="gone"
android:id="@+id/mpickupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="pickup poin"
        android:textColor="#F44336"
        android:fontFamily="@font/opensans"
        android:textSize="20sp"/>
    <TextView
        android:visibility="gone"
android:id="@+id/mdrouppoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="droup point"
        android:textColor="#F44336"
        android:fontFamily="@font/opensans"
        android:textSize="20sp"/>
    <TextView
        android:visibility="gone"
android:id="@+id/mnoofdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="no. of days"
        android:textColor="#F44336"
        android:fontFamily="@font/opensans"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Name :- "
            android:textColor="#F44336"
            android:fontFamily="@font/opensans"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/paymentname"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Niranjan"
            android:textColor="#F44336"
            android:fontFamily="@font/opensans"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Guide Cost :- "
            android:textColor="#F44336"
            android:fontFamily="@font/opensans"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/paymentcost"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="4000.Rs"
            android:textColor="#F44336"
            android:fontFamily="@font/opensans"
            android:textSize="20sp"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black">

        <EditText
android:id="@+id/cardname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Name of Card"
            android:textSize="20sp"
            android:fontFamily="@font/opensans"
            android:inputType="textNoSuggestions"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:singleLine="true"
            android:importantForAutofill="no"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black">

        <EditText
android:id="@+id/cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Card Number"
            android:textSize="20sp"
            android:fontFamily="@font/opensans"
            android:inputType="textNoSuggestions"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:singleLine="true"
            android:importantForAutofill="no"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black">

        <EditText
            android:id="@+id/expiredate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Expire Date"
            android:textSize="20sp"
            android:fontFamily="@font/opensans"
            android:inputType="textNoSuggestions"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:singleLine="true"
            android:importantForAutofill="no"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintAnimationEnabled="true"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black">

        <EditText
android:id="@+id/cardcvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter CVV Number"
            android:textSize="20sp"
            android:fontFamily="@font/opensans"
            android:inputType="textNoSuggestions"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:maxLines="1"
            android:singleLine="true"
            android:importantForAutofill="no"/>

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/cardsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"/>
</LinearLayout>